// This file can contain .js-specific Typescript compiler config.
{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "noEmit": true,
    /*
      // The following flags are for creating .d.ts files:
      "noEmit": false,
      "declaration": true,
      "emitDeclarationOnly": true,
  */
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": [
    "Jakefile.js",
    "src/*.js",
    "src/*.json",
    "exports.js"
  ],
}